<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Annuaire_RecyclerView_SQLITE_Room.AppBarOverlay"
        android:background="#FF03DAC5">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/Theme.Annuaire_RecyclerView_SQLITE_Room.PopupOverlay"
            android:background="#FF03DAC5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addContact"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>



    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="360dp"
        android:layout_height="598dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="150dp"
        android:elevation="3dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/icon1"
            app:civ_border_color="#9b59b6"
            app:civ_border_width="2dp" />


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_below="@id/photo"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input"
            android:elevation="3dp"
            android:gravity="center"
            android:hint="Name"
            android:inputType="text"
            android:padding="4dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_below="@id/name"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/input"
            android:elevation="3dp"
            android:gravity="center"
            android:hint="Email"
            android:inputType="text"
            android:padding="4dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/job"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_below="@id/email"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/input"
            android:elevation="3dp"
            android:gravity="center"
            android:hint="Job"
            android:inputType="text"
            android:padding="4dp"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_below="@id/job"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/input"
            android:elevation="3dp"
            android:gravity="center"
            android:hint="Phone number"
            android:inputType="text"
            android:padding="4dp"
            android:textSize="20sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|center"
            android:layout_marginStart="153dp"
            android:layout_marginLeft="153dp"
            android:layout_marginTop="96dp"
            android:layout_marginEnd="151dp"
            android:layout_marginRight="151dp"
            android:layout_marginBottom="12dp"
            app:srcCompat="@drawable/ic_home"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>

</RelativeLayout>